<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/layout_home"
        android:background="@mipmap/background">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/bocadillos"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Bocadillos"
                android:textColor="#FFF"
                android:gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/bocadillo"
                android:paddingLeft="6sp" />
            <Button
                android:id="@+id/bebidas"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Bebidas"
                android:textColor="#FFF"
                android:gravity="bottom"
                android:paddingLeft="6sp"
                android:layout_weight="1"
                android:background="@drawable/bebidas"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="58dp">
            <Button
                android:id="@+id/bolleria"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Bolleria"
                android:layout_weight="1"
                android:background="@drawable/dulce"
                android:textColor="#FFF"
                android:paddingLeft="6sp"
                android:gravity="bottom"/>
            <Button
                android:id="@+id/snacks"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Snacks"
                android:layout_weight="1"
                android:background="@drawable/snacks"
                android:textColor="#FFF"
                android:paddingLeft="6sp"
                android:gravity="bottom"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>